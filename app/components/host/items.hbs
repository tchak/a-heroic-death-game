<ul class="mt-12 grid gap-5 max-w-lg mx-auto lg:grid-cols-2 lg:max-w-none">
  {{#each @items as |item|}}
    <li class="flex flex-col rounded-lg shadow-lg overflow-hidden">
      <div class="flex-shrink-0">
        <img
          class="h-48 w-full object-fill"
          alt={{item.name}}
          src={{item.card}}
        />
      </div>
      <div class="flex-1 bg-white p-6 flex flex-col justify-between font-bold">
        {{#if (not-eq item.uses 99)}}
          {{t "Uses" uses=item.uses}}
          {{#if (and @useItem (not-eq item.uses 0))}}
            <div>
              <Button
                @title={{t "use"}}
                @color="blue"
                {{on "click" (fn @useItem item)}}
              />
            </div>
          {{/if}}
        {{/if}}

        <Host::GiveItem @item={{item}} @inRoom={{@inRoom}} />
      </div>
    </li>
  {{/each}}
</ul>